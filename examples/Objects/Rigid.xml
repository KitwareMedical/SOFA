<Node name="RigidBody">
	<EulerImplicitSolver rayleighStiffness="0.01" />
	<CGLinearSolver iterations="25" threshold="0.00000001"  />
	<MechanicalObject template="Rigid" translation="0 0 0" rotation="0 0 0" scale3d="1 1 1"/>
	<UniformMass />
	<Node name="VisualNode" tags="Visual">
		<OglModel name="Visual" filename="file" color="gray" scale3d="1 1 1" />
		<RigidMapping object1="../.." object2="Visual" />
	</Node>
	<Node name="CollisionNode">
      <MeshObjLoader name="loader" filename="file"/>
      <Mesh src="@loader"/>
      <MechanicalObject src="@loader" scale3d="1 1 1"/>
      <Triangle contactStiffness="200"/>
      <Line     contactStiffness="@[-1].contactStiffness"/>
      <Point    contactStiffness="@[-1].contactStiffness" />
	  <RigidMapping/>
	</Node>
</Node>
