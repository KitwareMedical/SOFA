contains(DEFINES, SOFA_GPU_OPENCL) {
  !isEmpty(SOFA_GPU_OPENCL_LIB_DIR) {
    LIBS *= -L$$SOFA_GPU_OPENCL_LIB_DIR
  } else:!isEmpty(SOFA_GPU_OPENCL_DIR) {
    LIBS *= -L$$SOFA_GPU_OPENCL_DIR/lib
  }
  !isEmpty(SOFA_GPU_OPENCL_INCLUDE_DIR) {
    INCLUDEPATH *= $$SOFA_GPU_OPENCL_INCLUDE_DIR
  } else:!isEmpty(SOFA_GPU_OPENCL_DIR) {
    INCLUDEPATH *= $$SOFA_GPU_OPENCL_DIR/include
  }
  macx {
    LIBS += -framework OpenCL
  } else {
    LIBS *= -lOpenCL
  }
}
